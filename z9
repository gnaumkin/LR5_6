program DeleteElements;

const
  N = 20;

var
  arr: array[1..N] of integer;
  i, minIndex, firstPositiveIndex: integer;
  foundPositive, foundMin: boolean;

begin
  randomize;

  // заполнение массива случайными числами
  for i := 1 to N do
    arr[i] := random(50) - 25;

  // вывод исходного массива
  writeln('Исходный массив:');
  for i := 1 to N do
    write(arr[i], ' ');
  writeln;

  // поиск первого положительного элемента
  foundPositive := false;
  for i := 1 to N do
  begin
    if arr[i] > 0 then
    begin
      firstPositiveIndex := i;
      foundPositive := true;
      break;
    end;
  end;

  // удаление первого положительного элемента, если он найден
  if foundPositive then
  begin
    for i := firstPositiveIndex to N - 1 do
      arr[i] := arr[i + 1];
    arr[N] := 0;
    writeln('Массив после удаления первого положительного элемента:');
    for i := 1 to N do
      write(arr[i], ' ');
    writeln;
  end
  else
    writeln('В массиве нет положительных элементов.');

  // поиск наименьшего элемента
  foundMin := false;
  for i := 1 to N do
  begin
    if (not foundMin) or (arr[i] < arr[minIndex]) then
    begin
      minIndex := i;
      foundMin := true;
    end;
  end;

  // удаление наименьшего элемента, если он найден
  if foundMin then
  begin
    for i := minIndex to N - 1 do
      arr[i] := arr[i + 1];
    arr[N] := 0;
    writeln('Массив после удаления наименьшего элемента:');
    for i := 1 to N do
      write(arr[i], ' ');
    writeln;
  end
  else
    writeln('В массиве нет элементов.');

  readln;
end.
